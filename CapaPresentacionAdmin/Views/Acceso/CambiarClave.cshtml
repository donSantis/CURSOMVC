    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/datatables/1.10.21/css/jquery.dataTables.css" integrity="sha512-N19hd9iAH51B41ldwkb4kNvbdQS70H4qYVnTOCKp7Azk8YR5dbS/EnuunzQDmDIvptW1RpaPEKqZ8xvBw40Ufw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
