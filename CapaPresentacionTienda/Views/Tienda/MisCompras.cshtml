@model List<CapaEntidad.DetalleVenta>

@{
    ViewBag.Title = "MisCompras";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row mt-5">
        <div class="col-sm-12">
            @{
                if (Model.Count > 0)
                {
                    foreach (var item in Model)
                    {
                        <div class="row mb-3">
                            <div class="col-sm-12">
                                <div class="card">
                                    <div class="card-body bg-light">
                                        <h6>ID TRANSACCION: @item.ID_TRANSACCION</h6>
                                        <div class="table-responsive">
                                            <table class="table table-bordered">
                                                <thead>
                                                    <tr>
                                                        <th>Imagen</th>
                                                        <th>Producto</th>
                                                        <th>Percio Unitario</th>
                                                        <th>Cantidad</th>
                                                        <th>Total</th>
                                                    </tr>
                                                </thead>
                                                <tbody class="bg-white">
                                                    <tr>
                                                        <td> <img class="card-img-top mb-5 mb-md-0" src="data:image/@item.ID_PRODUCTO.EXTENSION;base64,@item.ID_PRODUCTO.BASE64" style="width:120px;height:120px"/> </td>
                                                        <td valign="middle">@item.ID_PRODUCTO.NOMBRE</td>
                                                        <td valign="middle">$ : @item.ID_PRODUCTO.PRECIO</td>
                                                        <td valign="middle">@item.CANTIDAD</td>
                                                        <td valign="middle">@item.TOTAL USD</td>
                                                    </tr>
                                                </tbody>
                                            </table>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
        <div class="row mb-3">
            <div class="col-sm-12 text-center">
                <h1>No se encontraron compras realizadas</h1>
            </div>  
        </div>
                }
            }
        </div>
    </div>
</div>